<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/button_beef"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fruits_background"
            android:drawableTop="@drawable/beef"
            android:padding="16dp"
            android:hint="@string/hint_livestock_beef"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_dairy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grains_background"
            android:drawableTop="@drawable/dairy"
            android:padding="16dp"
            android:hint="@string/hint_livestock_dairy"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textSize="25sp"
            android:textColor="@android:color/black" />



        <Button
            android:id="@+id/button_poultry"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vegetables_background"
            android:drawableTop="@drawable/poultry"
            android:padding="16dp"
            android:hint="@string/hint_livestock_poultry"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textSize="25sp"
            android:textColor="@android:color/black" />


    </LinearLayout>
</ScrollView>